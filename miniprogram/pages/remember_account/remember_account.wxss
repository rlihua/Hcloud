/* miniprogram/pages/remember_account/remember_account.wxss */
page{
    background: #eeeeee;
    font-size: 16px;
}
.account-body{
    padding:15px;
}
.account-item{
    justify-content:space-around;
    align-items:center;
    align-content:center;
}
.account-content{
    margin-bottom: 10px;
}
.account-content .account-item{
    padding:15px 0px;
    border-bottom: 1px solid #eee;
}
.account-content .account-item view:first-child{
    width: 70%;
}
.layer-view{
    background: #fff;
    width: 96%;
    margin:auto;
    margin-top:15px;
}
.hasPrice{
    font-size: 30px;
    color:#50C331;
}
.price-style{
    color: #50C331;
    font-size: 18px;
}
.title-view{
    color:#999;
    font-size: 14px;
}
.picker-view{
    padding:15px;
}
.account_btn{
    border-radius: 4px;
    text-align: center;
    padding:10px 0px;
}
.add_account_btn{
    border:1px solid #aaa;
    margin: 10px 0px;
}
.submit_account_btn{
    background: #50C331;
    color: #fff;
}
.content-view{
    position: fixed;
    top:0px;
    left:0px;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.5);
    z-index: 88;
}
.add-account-body{
    width: 80%;
    height: 212px;
    background: #fff;
    position: absolute;
    left:0px;
    right: 0px;
    top:0px;
    bottom:0px;
    margin:auto;
    border-radius: 8px;
}
.add-account-body .item-view{
    padding:15px;
}
.account-title{
    text-align: center;
    color: #333;
    padding:8px 0px;
}
.item-btn{
    width: 50%;
    text-align: center;
    padding:16px 0px;
    font-size: 18px;
}
.ensure-item-btn{
    color: #50C331;
    border-left:1px solid #eee;
}
.add-account-content{
    border-bottom: 1px solid #eee;
    padding:10px 10px 0px;
}
.no-data-text{
    text-align: center;
}